<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ZSTIE.Styles">

    <Style TargetType="{x:Type Button}" x:Key="BlueNeonButtonStyle">
        <Setter Property="Background" Value="#FF252526"/>
        <Setter Property="Foreground" Value="#FF6888BA"/>
        <Setter Property="BorderBrush" Value="#FF6888BA"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#FF789CD6"/>
                <Setter Property="Background" Value="#FF272728"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#FF252526"/>
                <Setter Property="Foreground" Value="#FF6888BA"/>
                <Setter Property="BorderBrush" Value="#FF6888BA"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>