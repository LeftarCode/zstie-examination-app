<UserControl x:Class="ZSTIE.Views.ListItems.ExamQuestionListItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZSTIE.Views.ListItems"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button Style="{StaticResource QuestionButtonListItemStyle}" BorderBrush="#FF6888BA" Margin="0,5,0,0" Command="{Binding QuestionSelect}">
            <Grid>
                <Label Content="{Binding Index}" Foreground="#ffecf0f1"></Label>
            </Grid>
            <Button.Effect>
                <DropShadowEffect Direction="0" ShadowDepth="0" Color="#FF6888BA"/>
            </Button.Effect>
        </Button>
    </Grid>
</UserControl>
